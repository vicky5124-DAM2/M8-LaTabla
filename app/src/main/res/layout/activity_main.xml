<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:stretchColumns="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

            <TextView
                    android:text="Product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvProduct"
                    android:paddingLeft="8dp"
                    android:background="#009688"
                    android:textColor="#FFFFFFFF" />

            <TextView
                    android:text="Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvQuantity"
                    android:paddingLeft="8dp"
                    android:background="#009688"
                    android:textColor="#FFFFFFFF" />

            <TextView
                    android:text="Subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvSubtotal"
                    android:gravity="right"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="#009688"
                    android:textColor="#FFFFFFFF" />

        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="LERHAMN Table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvProductValue1"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuantityValue1"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="49,58 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtotalValue1"
                    android:textAlignment="viewEnd"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="right" />
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="LERHAMN Console"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tvProductValue2"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuantityValue2"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="99,16 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtotalValue2"
                    android:textAlignment="textEnd"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="right" />
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="LERHAMN Table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductValue3"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuantityValue3"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="123,14 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtotalValue3"
                    android:textAlignment="viewEnd"
                    android:paddingLeft="8dp"
                    android:gravity="right"
                    android:paddingRight="8dp" />
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="KIVIK Two seater sofa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProductValue4"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvQuantityValue4"
                    android:paddingLeft="8dp" />

            <TextView
                    android:text="329,75 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSubtotalValue4"
                    android:textAlignment="textEnd"
                    android:paddingLeft="8dp"
                    android:gravity="right"
                    android:paddingRight="8dp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:outlineSpotShadowColor="@android:color/holo_red_dark"
                android:outlineAmbientShadowColor="@android:color/holo_red_dark"
                android:background="#6B6B6B"
                android:padding="2dp">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:id="@+id/view" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10" />

            <TextView
                    android:text="Subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:paddingLeft="8dp"
                    android:textColor="#009688" />

            <TextView
                    android:text="601,63 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" />

            <TextView
                    android:text="VAT"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView12"
                    android:paddingLeft="8dp"
                    android:textColor="#009688" />

            <TextView
                    android:text="126,34 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14" />

            <TextView
                    android:text="Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:paddingLeft="8dp"
                    android:textColor="#009688" />

            <TextView
                    android:text="727,97 €"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>